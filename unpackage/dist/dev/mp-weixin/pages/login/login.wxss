.login {
  position: relative;
  padding: 40rpx;
  box-sizing: border-box;
  height: 100%;
}
.login .title {
  font-size: 55rpx;
  font-weight: bold;
  text-align-last: center;
  margin-bottom: 100rpx;
  margin-top: 100rpx;
  color: #494949;
}
.login .input-wrapper {
  margin-bottom: 40rpx;
  border-radius: 8rpx;
  border: 1px solid #ccc;
}
.login .input-wrapper input {
  line-height: 180rpx;
  font-size: 32rpx;
  padding: 20rpx;
}
.login .input-wrapper input:first-child {
  border-bottom: 1px solid #ccc;
}
